<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:orientation="vertical" android:background="@color/black"
    android:gravity="center" android:id="@+id/helpView" >

    <android.support.wearable.view.CircledImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helpCircledImageView"
        android:src="@drawable/ic_help_outline_white_48dp"
        app:circle_radius="50dp"
        app:circle_color="@color/blue" />

    <TextView
        android:layout_gravity="center"
        android:text="@string/help"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/helpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center" />

</LinearLayout>
