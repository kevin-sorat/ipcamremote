<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="6dp" >

        <TextView
            android:id="@+id/brightnessTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/brightness"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

        <SeekBar
            android:id="@+id/brightnessSeekBar"
            style="@style/MySeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255" />

        <TextView
            android:id="@+id/contrastTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/contrast"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

        <SeekBar
            android:id="@+id/contrastSeekBar"
            style="@style/MySeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="6" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:gravity="center" >

            <Button
                android:id="@+id/irOnButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dip"
                android:text="@string/ir_on" />

            <Button
                android:id="@+id/irOffButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dip"
                android:text="@string/ir_off" />
            
            <Button
                android:id="@+id/fullScreenToggleButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_fullscreen" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/presetLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:gravity="center" >
            
            <TextView
            android:id="@+id/presetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dip"
            android:text="@string/preset"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />
            
            <Button
                android:id="@+id/setButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dip"
                android:text="@string/set" />

            <Spinner
                android:id="@+id/presetSpinner"
                android:layout_width="72dip"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/goButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go" />
            
      	</LinearLayout>
        
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/kevin_sorat/AndroidstudioProjects/IPCamRemote/app/src/main/res/layout-land/brightness_contrast.xml -->